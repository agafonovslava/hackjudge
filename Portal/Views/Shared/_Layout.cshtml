<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Improve Search Relevenace for Human Rights</title>
    <link href="https://fonts.googleapis.com/css?family=Droid+Sans" rel="stylesheet">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Judge Search", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})
            @Html.ActionLink("Rulings Search", "Index", "Rulings", new { area = "" }, new { @class = "navbar-brand" })
            @Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Add Judge", "Create", "Judges")</li>
                <li>@Html.ActionLink("Add Rulings", "Create", "Rulings")</li>
                <li>@Html.ActionLink("Add Membership", "Create", "Memberships")</li>
            </ul>
        </div>
    </div>
</div>
<div class="container body-content">
    @RenderBody()
    <hr/>
    <footer>
        <center>
            
            <a href="https://cfj.org/" target="_blank">
                <img width="150" height="150" src="~/Content/logo-tan.svg" alt="Advancing justice in courtrooms" />
            </a>
            
            <p>Microsoft &copy; @DateTime.UtcNow.Year - Hackathon</p>

        </center>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
