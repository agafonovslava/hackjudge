@model Portal.Models.Judge
@{
    ViewBag.Title = "Create Judge";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create a Judge</h2>
@using (Html.BeginForm("Create", "Judges"))
{
    @Html.AntiForgeryToken()
    <p class="alert alert-info">All fields are <strong>required.</strong></p>

    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(m=> m.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.TextBoxFor(m => m.Description, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(m => m.Description)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.SatoriId)
        @Html.TextBoxFor(m => m.SatoriId, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(m=> m.SatoriId)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.AttorneyNames)
        @Html.TextBoxFor(m => m.AttorneyNames, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(m=> m.AttorneyNames)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CommonlySitedSources)
        @Html.TextBoxFor(m => m.CommonlySitedSources, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(m => m.CommonlySitedSources)
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.JudicalSystem)
        @Html.TextBoxFor(m => m.JudicalSystem, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(m => m.JudicalSystem)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Jurisdiction)
        @Html.TextBoxFor(m => m.Jurisdiction, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(m => m.Jurisdiction)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Education)
        @Html.TextBoxFor(m => m.Education, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(m=> m.Education)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ImageUrl)
        @Html.TextBoxFor(m => m.ImageUrl, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(m=> m.ImageUrl)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Religion)
        @Html.TextBoxFor(m => m.Religion, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(m=> m.Religion)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Memberships)
        @Html.TextBoxFor(m => m.Memberships, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(m => m.Memberships)
    </div>

    <button type="submit" class="btn btn-success">Save</button>
}
@section scripts
{
    @Scripts.Render("~/bundles/jquery");
}